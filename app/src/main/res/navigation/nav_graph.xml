<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.omdb.app.ui.view.fragment.SearchFragment"
        android:label="Movie Search"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/next_action"
            app:destination="@id/movieListFragment" />

    </fragment>
    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.omdb.app.ui.view.fragment.MovieListFragment"
        android:label="MovieList"
        tools:layout="@layout/fragment_movie_list">
        <argument
            android:name="searchText"
            app:argType="string" />
        <action
            android:id="@+id/action_searchFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.omdb.app.ui.view.fragment.DetailFragment"
        android:label="detail_fragment"
        tools:layout="@layout/detail_fragment">
        <argument
            android:name="movie"
            app:argType="com.omdb.app.ui.adapter.MovieModel" />
    </fragment>

</navigation>
